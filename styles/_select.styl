@import './mixins/_text-control'

qratorMuiBuildSelect($palette)
  .q-mui-select
    qratorMuiTextControl($palette)

    &_has-right-icon
      ^[-1]__el
        padding-right: 28px
        width: auto

      ^[-1]__right-icon
        position: absolute
        right: 0px
        top: -5px

    &__hidden-el
      opacity: 0
      position: absolute
      left: 0
      right: 0
      bottom: 0
      top: 0
      z-index: 1
      width: 100%
      display: block
      cursor: default
      padding: 0
      border: none 
      outline: none

    &__options
      display: none
      position: absolute
      top: 27px
      right: 0
      left: 0
      box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 6px, rgba(0, 0, 0, 0.1) 0px 1px 4px
      background-color: white
      z-index: 3
      overflow-y: auto

    &_focus
      & ^[-1]__options
        display: block

    &_disabled
      & ^[-1]__el
        border-bottom-style: dotted
        border-bottom-width: 2px

    .q-mui-option
      position: relative
      cursor: pointer
      transition: background-color .2s $qratorMuiAnimationFunc
      &:hover, &_active
        background-color: rgba(0, 0, 0, .08)

      &_divide-after
        border-bottom: 1px solid #e0e0e0
      &_divide-before
        border-top: 1px solid #e0e0e0
      &__container
        padding: 12px 16px
