qratorMuiBuildDropdownContent()
  .q-dropdown-content
    position: absolute
    background: white
    border-radius: 2px
    box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 6px, rgba(0, 0, 0, 0.1) 0px 1px 4px
    color: black
    opacity: 1
    transition: transform 250ms, opacity 450ms
    transition-timing-function: $animationFunc
    
    &_bottom&_right
      bottom: 0
      left: 0
      transform: translateY(100%) scale(1)
      transform-origin: left top

      &^[-1]-enter
        opacity: 0
        transform: translateY(100%) scale(0)

      &^[-1]-enter-active
        opacity: 1
        transform: translateY(100%) scale(1)

      &^[-1]-leave
        transform: translateY(100%) scale(0)
        opacity: 0
        
    &_bottom&_left
      bottom: 0
      right: 0
      transform: translateY(100%) scale(1)
      transform-origin: right top

      &^[-1]-enter
        opacity: 0
        transform: translateY(100%) scale(0)

      &^[-1]-enter-active
        opacity: 1
        transform: translateY(100%) scale(1)

      &^[-1]-leave
        transform: translateY(100%) scale(0)
        opacity: 0

