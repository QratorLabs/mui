qratorMuiBuildDropdownItem()
  .q-dropdown-item
    background-color: white
    cursor: pointer
    display: block
    position: relative
    transition: background-color
    transition-timing-function: $qratorMuiAnimationFunc
    transition-duration: 450ms
    
    &:hover
      background-color: rgba(0, 0, 0, 0.1)

    &__content
      line-height: 48px
      padding: 0 16px
      display: flex
      align-items: center
      white-space: nowrap
      position: relative

    &_multiline
      & ^[-1]__content
        white-space: normal
        line-height: 1
